---
import Nav from "@components/Nav.astro";
import Layout from "@layouts/BaseLayout.astro";
import Container from "@components/Container.astro";
import Heading from "@components/Heading.astro";

const age = Math.floor(
  (new Date().getTime() - new Date("2007-10-27").getTime()) /
    (1000 * 60 * 60 * 24 * 365.25)
);
---

<Layout title="Ibrahim Hisham ~  Me" padding="32" path="me">
  <Container>
    <Nav />
    <Heading title="Links" styling="stagger-50" />
    <ul class="text-slate-400 antialised text-base animate-fade stagger-100">
      <li>
        mail <br />
        <a
          href="mailto:ibrahim.hisham@proton.me"
          class="text-slate-200 hover:text-slate-400"
          >ibrahim.hisham@proton.me</a
        >
      </li>
      <li>
        github <br />
        <a
          href="https://github.com/ibra"
          class="text-slate-200 hover:text-slate-400">/ibra</a
        >
      </li>
      <li>
        itch <br />
        <a
          href="https://ibrahh.itch.io"
          class="text-slate-200 hover:text-slate-400">/ibrahh</a
        >
      </li>
      <li>
        letterboxd <br />
        <a
          href="https://letterboxd.com/ibrahh/"
          class="text-slate-200 hover:text-slate-400">/ibrahh</a
        >
      </li>
    </ul>
    <Heading title="A Little About Me" styling="stagger-150 mb-5" />
    <a
      href="/images/smol_ibra.jpg"
      target="_blank"
      rel="noreferrer"
      aria-label="small depiction of ibrahim"
    >
      <img
        class="float-left mr-5 animate-fade stagger-200"
        src="/images/smol_ibra.jpg"
        alt="Picture of me"
        width="25%"
      />
    </a>
    <div class="text-slate-400 antialised leading-relaxed mb-5">
      <p class="animate-fade stagger-250 text-lg">
        I'm a {age} year old programmer and hobbyist indie game developer from Lahore,
        Pakistan.
        <br />
        <br />
      </p>
      <p class="animate-fade stagger-400 text-lg">
        I love constantly being overwhelmed and immersed in my work (sometimes
        to my detriment...), and working on interesting technical problems to
        solve.
      </p>
      <br />
      <p class="animate-fade stagger-400 text-lg">
        If you have something for me, feel free to <a
          href="mailto:ibrahim.hisham@proton.me"
          class="text-slate-200 hover:text-slate-400">reach out</a
        >.
      </p>
      <br />
      <p class="animate-fade stagger-300 text-lg">
        Systems programming is my current interest, especially anything to do
        with compilers, networking, and low-level programming.
      </p>
      <br />
      <p class="animate-fade stagger-350 text-lg">
        I love working on games in my spare time. The craft of gamedev, to me,
        has always felt like the greatest amalgamation of all the art forms I
        appreciate.
      </p>
      <br />
    </div>
  </Container>
</Layout>
